<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="kz.brotandos.trailerman">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name="kz.brotandos.trailerman.movies.movie.MovieDetailsActivity"
                android:theme="@style/DetailTheme" />
        <activity
                android:name="kz.brotandos.trailerman.series.detail.SeriesDetailActivity"
                android:theme="@style/DetailTheme" />
        <activity android:name="kz.brotandos.trailerman.actors.actor.ActorDetailsActivity" />
    </application>

</manifest>